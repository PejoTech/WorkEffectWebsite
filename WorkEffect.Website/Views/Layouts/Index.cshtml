@model IEnumerable<WorkEffect.Website.Models.ContentLayout>

@{
    ViewBag.Title = "Index";
}
<div class="container" id="WorkEffect1">
    <div class="col-md-12 body-container">
        
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Css)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Html)
                </th>
                <th class="table-actions"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Css)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Html)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }

        </table>
    </div>
</div>